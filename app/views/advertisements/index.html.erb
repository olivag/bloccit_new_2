<h1>All Advertisements</h1>

<% @advertisements.each do |advertisement| %>
<div class="media">
  <div class="media-body">
    <div class="media-heading">
      <p><%= link_to advertisement.title, advertisement %></p>
    </div>
  </div>
</div>
<% end %>
<div>
  <%= link_to "New ad", new_advertisement_path, class: 'btn btn-success' %>
</div>